require 'faildns/client'
require 'optimus'

opt = Optimus.new {|o|
  o.set(
    :type => :array,

    :long  => 'servers',
    :short => 's'
  )
}

client = DNS::Client.new(:servers => opt.params[:s])

opt.args.each {|arg|
  puts "#{arg}: #{client.resolve(arg)} (#{client.resolve(arg, { :version => 6 })})"
}
