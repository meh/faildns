require 'optparse'
require 'faildns/client'

options = {}

OptionParser.new do |o|
	o.on '-s', '--servers SERVER...', Array, 'the servers to use to resolve' do |value|
		options[:servers] = value
	end
end.parse!

client = DNS::Client.new(:servers => options[:servers])

ARGV.each {|arg|
	ipv4 = client.resolve(arg)
	ipv6 = client.resolve(arg, version: 6)

	if ipv4.length == 1
		puts "#{arg}: #{ipv4.first}#{" (#{ipv6.first})" if ipv6.first}"
	else
		puts "#{arg}: #{ipv4.shift}"

		ipv4.each {|ip|
			puts "#{' ' * (arg.length + 2)}#{ip}"
		}
	end
}
